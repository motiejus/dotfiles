eval "$(direnv hook bash)"
export DIRENV_LOG_FORMAT=""
export CLUSTODSN=postgresql://clusto:clusto@127.0.0.1:5432/clusto
export EDITOR=vim
#export GOPATH=$HOME/.gopath

ulimit -Sn 10240

for path in \
    /sbin \
    /usr/sbin \
    $HOME/bin \
    ; do
    if [[ ! $PATH =~ $path ]]; then
        export PATH=$path:$PATH
    fi
done

toolshed() {
    local ti="-i"
    if [[ -t 0 ]]; then
        local ti="-ti"
    fi
    docker run --init --name toolshed -v `pwd`:/x -w /x "$ti" --rm motiejus/toolshed "$@"
}

nman() {
    nvim +"Man $*" +on
}

[[ -f $HOME/.gg.sh ]] && . $HOME/.gg.sh
export MONOREPO_GOPATH_MODE=1
#[[ -f $HOME/.bashrc_time.sh ]] && . $HOME/.bashrc_time.sh


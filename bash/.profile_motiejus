export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export PS1='\[\e[0;32m\]\u\[\e[m\] \[\e[1;34m\]\w\[\e[m\] \[\e[1;32m\]\$\[\e[m\] '
export LSCOLORS=ExFxBxDxCxegedabagacad
